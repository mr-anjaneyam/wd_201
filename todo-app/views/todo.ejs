<div>
    <div class="flex">
      <h5><%= container %></h5>  
      <span id="<%= id %>" class="ml-3 px-2 bg-gray-100 rounded"><%= todos.length %></span>
    </div>
    <ul class="list-none">
      <% for (var i = 0; i< todos.length; i++) { %>
        <li class="Todo-Item">
            <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-gray-50">
                <input type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 rounded border-gray" <%= todos[i].completed ? "checked" : "" %> onclick="updateTodo(<%= todos[i].id %>,<%= todos[i].completed %>)" id="todo-checkbox-<%= todos[i].id%>">
                <label for = "todo-checkbox-<%= todos[i].id%>" class="ml-2 text-sm text-gray-600 cursor-pointer">
                    <%= todos[i].title %>
                </label>
                <a href="#" class="hidden trash-icon ml-2" onclick="deleteTodo(<%= todos[i].id %>)">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path d="M6.343 5.657a1 1 0 011.414 0L12 10.586l4.243-4.243a1 1 0 011.414 1.414L13.414 12l4.243 4.243a1 1 0 01-1.414 1.414L12 13.414l-4.243 4.243a1 1 0 01-1.414-1.414L10.586 12 6.343 7.757a1 1 0 010-1.414z" stroke="currentColor" stroke-width="2" />
                  </svg>     
                </a> 
            </div>
        </li>
      <% } %>
    </ul>
</div>
